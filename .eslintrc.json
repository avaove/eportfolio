{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "linebreak-style": 0,
        "require-jsdoc": 0,
        "max-len": ["error", { "code": 200 }],
        "react/prop-types": 0,
        "react/react-in-jsx-scope": 0,
        "indent": ["error", 2, {
                "ignoredNodes": [
                    "TemplateLiteral"
                ],
                "SwitchCase": 1
            }
        ],
        "arrow-parens": ["error", "as-needed"],
        "no-invalid-this": 0,
        "operator-linebreak": ["error", "before"]
    }
}